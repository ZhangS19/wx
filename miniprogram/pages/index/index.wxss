}
.botinfo-wrap {
  width: calc( 100% - 20px);
  height: 60px;
  
  padding-left: 20px;
}
.botinfo-pic {
  float: right;
  display: inline-block;
  width: 40px;
  height: 40px;
  margin-top: 8px;
  margin-right: 20px;
  background-color: rgb(177, 177, 177);
}
.text-box {
  display: inline-block;
  width: calc( 100% - 20px - 60px);
  height: 56px; 
  padding-top: 4px;
  border-bottom: solid 1px #b9b9b9;
}
.botinfo-wrap:last-child > .text-box {
  border: none;
}

.botinfo-text {
  text-align: left;  
  font-size: 15px;
  word-wrap:break-word;  
}
.info-more-container {
  width: 100%;
  text-align: center;
}
.info-more {

  font-size: 15px;
  
}
.botnav-container {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 70px;
  text-align: center;
  vertical-align: middle;
  background-color: white;
  box-shadow: 0 1px 6px rgba(0, 0, 0, 0.15);
}

.botnav-wrap {
  display: inline-block;
  text-align: center;
  margin-left: 18px;
  margin-right: 10px;
  width: 50px;
  height: 70px;
  vertical-align: middle;
  background-color: white;
}
.botnav-pic {
  display: inline-block;
  width: 50px;
  height: 50px;
}

.botnav-text {
  float:left;
  width:100%;
  font-size: 12px;
  margin-top: -5px;
  color: #b9b9b9;
}
