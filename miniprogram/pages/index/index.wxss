.topnav-container{
  width: calc( 100% - 40);
  height: 30px;
  margin-left: 20px;
  margin-right: 20px;
  margin-top: 15px;
  border-radius: 15px;
  /* box-shadow: 0px 0px 3px rgba(0, 0, 0, 0.294); */
  background-color: white;
  border: solid 1px #EBEBEB;
}
.search-bar{
  width: 24px;
  height: 24px;
  margin-top: 4px;
  margin-left: 12px;
  background-image: url("../../source/search-bar.png");
  background-size: cover;
}
.nav-container{
  width: 100%;
  height: 65px;
  margin-top: 20px;
  text-align: center;
}
.nav-wrap{
  display: inline-block;
}
.block-wrap {
  display: inline-block;
  width: 48px;
  height: 65px;
  margin-left: 17px;
  margin-right: 17px;
}
.cir-container {
  width: 48px;
  height: 48px;
  border-radius: 24px;
  background-color: white;
  box-shadow: 0px 1px 6px rgba(0, 0, 0, 0.15);
}
.cir {
  display: inline-block;
  width: 34px;
  height: 34px;
  margin-top: 8px;
}

.block-title {
  width: calc( 100% - 40);
  height: 30px;
  margin-left: 20px;
  margin-right: 20px;
  margin-top: 20px;
  border-radius: 15px;
  background-color: white;
  border: solid 1px #EBEBEB;
  box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.08);
}
.ico-text {
  font-size: 10px;
}
.block-text {
  width: 60px;
  line-height: 30px;
  font-size: 15px;
  margin-top: 5px;
  margin-left: 20px;
}

.info-block {
  width: calc( 100% - 40);
  height: 330px;
  margin-top: 20px;
  margin-bottom: 100px;
  margin-left: 20px;
  margin-right: 20px;
  box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.08);
  background-color: white;
  border-radius: 15px 15px 0px 0px;
}
.topinfo-container {
  height: 120px;
  background-color: #b9b9b9;
  border-radius: 15px 15px 0px 0px;


}
