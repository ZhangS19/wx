/* pages/info/info.wxss */
page {
  background-color: #f7f7f7;
}

.block-title {
  width: calc( 100% - 40);
  height: 30px;
  margin-left: 20px;
  margin-right: 20px;
  margin-top: 20px;
  border-radius: 15px;
  background-color: white;
  border: solid 1px #EBEBEB;
  box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.08);
}
.block-text {
  width: 60px;
  line-height: 30px;
  font-size: 15px;
  margin-top: 5px;
  margin-left: 20px;
}

.info-block {
  width: calc( 100% - 40);
  height: 330px;
  margin-top: 20px;
  margin-bottom: 60px;
  margin-left: 20px;
  margin-right: 20px;
  box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.08);
  background-color: white;
  border-radius: 15px 15px 0px 0px;
}
.topinfo-container {
  height: 120px;
  background-color: #b9b9b9;
  border-radius: 15px 15px 0px 0px;


}
