.topinfo-pic {
  width: 100%;
  height: 85px;
}
.topinfo-text {
  font-size: 15px;
  margin-top: -10px;
  margin-left: 20px;
  z-index: 999;
  color: white;
}
.botinfo-wrap {
  width: calc( 100% - 20px);
  height: 60px;
  
  padding-left: 20px;
}
.botinfo-pic {
  float: right;
  display: inline-block;
  width: 40px;
  height: 40px;
  margin-top: 8px;
  margin-right: 20px;
  background-color: rgb(177, 177, 177);
}
.text-box {
  display: inline-block;
  width: calc( 100% - 20px - 60px);
  height: 56px; 
  padding-top: 4px;
  border-bottom: solid 1px #b9b9b9;
}
.botinfo-wrap:last-child > .text-box {
  border: none;
}

.botinfo-text {
  text-align: left;  
  font-size: 15px;
  word-wrap:break-word;  
}
.info-more-container {
  width: 100%;
  text-align: center;
}
.info-more {

  font-size: 15px;
  
