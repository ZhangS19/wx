/* components/searchbar/searchbar.wxss */
.searchbar-container{
  display: flex;
  width: 100%;
  height: 60rpx;
  margin-top: 15px;
  /* box-shadow: 0px 0px 3px rgba(0, 0, 0, 0.294); */
  
 
  align-items: center;
}
.search-bar {
  display: flex;
  width: calc( 100% - 40px);
  border: solid 1px #EBEBEB;
  border-radius: 15px;
  margin-left: 20px;
  height: 60rpx;
  background-color: white;
  align-items: center;
}

.search-icon {
  display: inline-block;
  margin-left: 40rpx;
  margin-right: 20rpx;
}
.insert-cancel {
  width: calc( 100% - 90px);
}
.search-bar > input {
  display: inline-block;
  width: calc( 100% - 90px);
  height: 60rpx;
  font-size: 26rpx;
  line-height: 60rpx;
}
.clear-search-icon {
  display: inline-block;
  size: 30rpx;
}
.cancel-search {
  color: rgb(109, 109, 109);
  font-size: 28rpx;
  margin-left: 20rpx;
}